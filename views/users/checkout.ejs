<%- include ('../partials/_header.ejs') %>
<main>
    <div class="list-page">
        <div class="main-left">
            <div class="top-img">
                <img src="../../images/navimg.png" />
            </div>
            <nav class="menu">
                <h3 class="menu-title">TRANG CÁ NHÂN</h3>
                <ul>
                    <li><a class="menu__item" href="/users/dashboard?view=cart">Giỏ hàng của bạn</a></li>
                    <li><a class="menu__item" href="/users/dashboard?view=order">Đơn đặt hàng của bạn</a></li>
                    <li><a class="menu__item" href="/users/logout">Đăng xuất</a></li>
                </ul>

            </nav>
        </div>
        <div class="main-right">
            <% var title = "TRANG CÁ NHÂN"; %>
            <h1><%= title %></h1>
            <div class="list-zone">
                <div class="container mt-3">
                    <div class="jumbotron p-3">
                        <div class="d-flex justify-content-around" style="font-size: 25px; color: darkblue;">
                            <span>Thanh toán đơn đặt hàng</span>
                        </div>
                        <div class="container mt-2">
                            <table class="table table-bordered bg-light table-responsive-sm">
                                <thead>
                                <tr>
                                    <th scope="col">Ảnh bìa</th>
                                    <th scope="col">Tiêu đề</th>
                                    <th scope="col">Giá</th>
                                    <th scope="col">Số lượng</th>
                                    <th scope="col">Tổng tiền</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% user.carts.forEach(cartItem=>{ %>
                                    <tr>
                                        <td><img src="<%= cartItem.book.image %>" alt="Book Cover" class="img-thumbnail"
                                                 style="height: 8rem; width: 8rem;"></td>
                                        <td><%= cartItem.book.title %> </td>
                                        <td class="text-danger"><%= cartItem.book.price %> VNĐ/td>
                                        <td>
                                            <%= cartItem.quantity %>
                                        </td>
                                        <td class="text-danger">
                                            <%= cartItem.quantity * cartItem.book.price %> VNĐ
                                        </td>
                                    </tr>
                                <% }) %>
                                <tr class="lead font-weight-bold text-primary">
                                    <td colspan="3">Grand Total</td>
                                    <td colspan="2"> <%= total %> VNĐ</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <hr class="my-3">
                        <div class="row">
                            <form action="/users/order" method="POST" class="mx-auto">
                                <script
                                        src="https://checkout.stripe.com/checkout.js"
                                        class="stripe-button"
                                        data-key="pk_test_FlAojKcuIGhVk1nR6Tk2QHrD00nwi3ZZ18"
                                        data-name="DH Library"
                                        data-description="Mua sách đi bạn"
                                        data-amount="<%= total%>"
                                        data-currency="vnd"
                                        data-image="https://media.istockphoto.com/vectors/books-bookshelf-vector-icon-isolated-pile-of-books-stack-of-books-vector-id1292243574?k=20&m=1292243574&s=612x612&w=0&h=s1SwOqoaKZoTzQK8KlFV97pTe1JzWMwHOs9RQSB69SA=">
                                </script>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</main>

