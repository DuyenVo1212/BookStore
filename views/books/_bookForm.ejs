<div class="form-group">
  <label for="Title">Book title</label>
  <input
    required
    type="text"
    class="form-control"
    id="Title"
    name="title"
    value="<%= typeof book !== 'undefined' ? book.title : ''%> "
  />
</div>
<div class="form-group">
  <label for="Title">Author</label>
  <input
    required
    type="text"
    class="form-control"
    id="Title"
    name="author"
    value="<%= typeof book !== 'undefined' ? book.author : ''%> "
  />
</div>
<div class="form-group">
  <label for="Title">Category</label>
  <select class="form-control" name="category">
    <% categories.forEach(category => { %>
    <option value="<%= category._id %>"><%= category.name %></option>
    <% }) %>
  </select>
</div>
<div class="form-group">
  <label for="image">Image</label>
  <input
    required
    type="url"
    class="form-control"
    id="image"
    name="image"
    value="<%= typeof book !== 'undefined' ? book.image : ''%> "
  />
</div>
<div class="form-group">
  <label for="description">Description</label>
  <textarea
    required
    name="description"
    class="form-control"
    id="description"
    rows="3"
  >
<%= typeof book !== 'undefined' ? book.description : ''%></textarea
  >
</div>
<div class="form-group">
  <label class="form-check-label" for="price">Price</label>

  <input
    required
    type="number"
    name="price"
    class="form-control"
    id="Title"
    value="<%= typeof book !== 'undefined' ? book.price : ''%>"
  />
</div>
<div class="form-group">
  <label class="form-check-label" for="price">Sale price</label>
  <input
    required
    type="number"
    name="sale"
    class="form-control"
    id="Title"
    value="<%= typeof book !== 'undefined' ? book.sale : ''%>"
  />
</div>
<button type="submit" class="btn btn-success">
  <%= typeof book === 'undefined' ? 'Create new' : 'Update'%>
</button>
<a
  href="<%= typeof book === 'undefined' ? '/books' : `/books/view/${book._id}`%>"
  class="btn btn-success"
  >Back</a
>
