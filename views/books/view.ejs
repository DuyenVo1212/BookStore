<%- include ('../partials/_header.ejs') %>
<main>
  <div class="list-page is-single">
    <div class="main-right">
      <h1>THE LIST OF BOOK</h1>
    </div>
  </div>
  <div class="book-detail">
    <div class="book-information">
      <div class="book-img">
        <img src="<%= book.image %> " />
        <div class="book-desc">
          <h2 class="book-name"><%= book.title %></h2>
          <div class="book-author">
            <span><%= book.author %></span>
          </div>
          <div class="book-price"><%= book.price %> VND</div>
        </div>
      </div>
    </div>
  </div>
  <div class="book-informationMore">
    <div class="book-left">
      <div class="book-rating">
        <i class="fas fa-star is-active"></i>
        <i class="fas fa-star is-active"></i>
        <i class="fas fa-star is-active"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
      </div>
      <div class="book-tag">
        <span>Fiction</span>
        <span>Short stories</span>
      </div>
    </div>
    <div class="book-right">
      <span>Description</span><br />
      <span><%= book.description %></span>
      <hr style="margin: 50px 0" />
      <div class="book-order">
        <form
          action="/users/cart/<%= book._id %>?_method=PUT"
          class="d-inline"
          method="POST"
        >
          <button type="submit" class="btn btn-warning">Add to cart</button>
        </form>
      </div>
    </div>
  </div>

  <div class="book-comment">
    <hr />
    <h3>Customer Review</h3>
    <div class="rating-zone">
      <div class="total-rating">
        <div class="total-rating__number">
          <span>4</span>
          <span>/5</span>
        </div>
        <div class="total-rating__star book-rating">
          <i class="fas fa-star is-active"></i>
          <i class="fas fa-star is-active"></i>
          <i class="fas fa-star is-active"></i>
          <i class="fas fa-star is-active"></i>
          <i class="fas fa-star"></i>
        </div>
        <div class="total-rating__total">165 Reviews</div>
      </div>
      <div class="rating-detail">
        <div class="rating-row book-rating">
          <i class="fas fa-star is-active"></i>
          <i class="fas fa-star is-active"></i>
          <i class="fas fa-star is-active"></i>
          <i class="fas fa-star is-active"></i>
          <i class="fas fa-star is-active"></i>
          <div class="progress none"></div>
        </div>
        <div class="rating-row book-rating">
          <i class="fas fa-star is-active"></i>
          <i class="fas fa-star is-active"></i>
          <i class="fas fa-star is-active"></i>
          <i class="fas fa-star is-active"></i>
          <i class="fas fa-star"></i>
          <div class="progress"></div>
          <div class="rating-text">(165)</div>
        </div>
        <div class="rating-row book-rating">
          <i class="fas fa-star is-active"></i>
          <i class="fas fa-star is-active"></i>
          <i class="fas fa-star is-active"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <div class="progress none"></div>
        </div>
        <div class="rating-row book-rating">
          <i class="fas fa-star is-active"></i>
          <i class="fas fa-star is-active"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <div class="progress none"></div>
        </div>
        <div class="rating-row book-rating">
          <i class="fas fa-star is-active"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <div class="progress none"></div>
        </div>
      </div>
    </div>
    <div class="rating-comment">
      <% book.comments.forEach(comment=>{ %>
      <div class="comment-row">
        <div class="comment-avatar">
          <img
            src="https://www.tnex.com.vn/wp-content/uploads/2021/08/Artboard-14.png"
          />
        </div>
        <div class="comment-content">
          <div class="comment-name"><%= comment.author.name %></div>
          <div class="comment-date">
            <%= comment.createdAt.toLocaleDateString() %> <%=
            comment.createdAt.toLocaleTimeString() %>
          </div>
          <div class="comment-rating book-rating">
            <i class="fas fa-star is-active"></i>
            <i class="fas fa-star is-active"></i>
            <i class="fas fa-star is-active"></i>
            <i class="fas fa-star is-active"></i>
            <i class="fas fa-star"></i>
          </div>
          <div class="comment-text"><%= comment.content %></div>
        </div>
      </div>
      <% }) %>
    </div>
    <div class="d-flex justify-content-end">
      <a href="/books/<%= book._id %>/comments/new" class="btn btn-secondary"
        >Add comment</a
      >
    </div>
  </div>
  <div class="main-left is-single">
    <div class="top-img">
      <img src="../../images/navimg.png" />
    </div>
  </div>
</main>

<%- include ('../partials/_footer.ejs') %>
